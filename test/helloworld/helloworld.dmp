/*
This program prints "Hello World!" to screen multiple times
*/

`` Include a header file
include include.dmp

`` Representations
char :: int8
int  :: int64
null :: 0 => char

`` Declaration
printChar : func(c : char)

`` Function definition
hello := func() {

    s := {"Hello World!\n"};
    i := {0};

    loop ; s[i] != (0 => char); i += 1 {
        printChar(s[i]);
    }

    loop i = 0; s[i] != null; i += 1 {
        printChar(s[i]);
    }

    i = 0;
    loop s[i] != 0 => char {
        printChar(s[i]);
        i += 1;
    }

    i = 0;
    loop {
        if s[i] == 0 => char {
            break;
        }
        printChar(s[i]);
        i += 1;
    }

}

`` The "main" function
extern main := func(argc : int32, argv : %%char) -> int32 {

    hello();

    return 0 => int32;

}
